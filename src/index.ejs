<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Root Config</title>

  <meta name="importmap-type" use-injector />

  <script type="injector-importmap">
  {
    "imports": {
      "single-spa": "https://cdn.jsdelivr.net/npm/single-spa@6.0.3/lib/es2015/esm/single-spa.min.js",
      "single-spa-react": "https://cdn.jsdelivr.net/npm/single-spa-react@6.0.2/dist/esm/single-spa-react.js",

      "react": "https://esm.sh/react@18",
      "react-dom": "https://esm.sh/react-dom@18",
      "react-dom/client": "https://esm.sh/react-dom@18/client",

      "@mf/root-config": "//localhost:9000/mf-root-config.js",
      "@mf/auth-app": "//localhost:8080/mf-auth-app.js"
    }
  }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/import-map-overrides/dist/import-map-overrides.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@single-spa/import-map-injector/lib/import-map-injector.js"></script>

</head>

<body>
  <main></main>

  <script>
    window.importMapInjector.initPromise.then(() => {
      import("@mf/root-config");
    });
  </script>

  <import-map-overrides-full show-when-local-storage="devtools"></import-map-overrides-full>
</body>

</html>